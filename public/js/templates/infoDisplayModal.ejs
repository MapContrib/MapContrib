<section class="info_display_modal pop_modal">
    <div class="pop white">
        <header>
            <button type="button" class="btn btn-link btn-lg pull-right close_btn">
                <i class="fa fa-close"></i>
            </button>
        </header>

        <div class="container-fluid content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="info_content"></div>
                </div>
            </div>
            <div class="col-xs-12 relations hide">
                <h3 data-l10n-id="infoDisplayColumn_relationsTitle"></h3>
                <div class="list"></div>
            </div>
            <div class="row bordered-footer hide">
                <div class="col-xs-12">
                    <a href="#<%= editRoute %>" class="btn btn-primary btn-block edit_btn" data-l10n-id="<%= editButtonLabel %>"></a>
                </div>
            </div>
        </div>
    </div>
</section>
