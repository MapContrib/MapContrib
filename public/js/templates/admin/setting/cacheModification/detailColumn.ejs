<section class="column right orange">
    <header>
        <button type="button" class="btn btn-link btn-lg pull-right close_btn">
            <i class="fa fa-close"></i>
        </button>

        <h2 data-l10n-id="overPassCacheModifications"></h2>
    </header>

    <form>
        <div class="container-fluid content sticky">
            <div class="row sticky-header">
                <div class="col-xs-12">
                    <button type="button" class="btn btn-primary btn-block zoom_btn" data-l10n-id="overPassCacheModifications_zoomOnElement"></button>
                </div>
            </div>

            <div class="row sticky-inner">
                <div class="col-xs-12">
                    <h4 data-l10n-id="layer"></h4>
                    <p class="append-xs-2"><%- name %></p>

                    <h4 data-l10n-id="osmId"></h4>
                    <p class="append-xs-2">
                        <a target="_blank" rel="noopener noreferrer" href="https://www.openstreetmap.org/<%- osmId %>">
                            <%- osmId %>
                        </a>
                    </p>

                    <h4 data-l10n-id="tags"></h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th data-l10n-id="key"></th>
                                <th data-l10n-id="value"></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row sticky-footer">
                <div class="col-xs-12">
                    <button type="button" class="btn btn-primary archive_btn" data-l10n-id="archive"></button>
                    <button type="button" class="btn btn-primary pull-right delete_btn" data-l10n-id="delete"></button>
                </div>
            </div>
        </div>
    </form>
</section>
