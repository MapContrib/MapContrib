<section class="column right red">
    <header>
        <button type="button" class="btn btn-link btn-lg pull-right close_btn">
            <i class="fa fa-close"></i>
        </button>

        <h2 data-l10n-id="editPoiColumn_title"></h2>
    </header>

    <form action="<%- apiPath %>?fragment=<%- fragment %>" method="post" enctype="multipart/form-data">
        <div class="container-fluid content sticky">
            <div class="row sticky-header move_section hide">
                <div class="col-xs-12">
                    <button type="button" data-l10n-id="editPoiColumn_movePoi" class="btn btn-primary btn-block move_btn"></button>
                </div>
            </div>
            <div class="row sticky-inner">
                <div class="col-xs-12">
                    <div class="rg_tag_list">
                        <p data-l10n-id="editPoiColumn_emptyState"></p>
                    </div>
                    <button type="button" class="btn btn-default add_btn" data-l10n-id="contribColumn_addTag"></button>
                    <div class="bottom"></div>
                </div>
            </div>
            <div class="row sticky-footer">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary save_btn" data-l10n-id="save"></button>
                    <button type="button" class="btn btn-default pull-right delete_btn" data-l10n-id="contribColumn_deletePoi"></button>
                </div>
            </div>
        </div>
    </form>
</section>
